" Turn on syntax highlighting
syntax on

" Don't try to be vi compatible
set nocompatible

" Stop beeping!
set noerrorbells

" Encoding
set encoding=utf-8

" Whitespace
set tabstop=4
set softtabstop=4
set shiftwidth=4
set expandtab
set smartindent
set nowrap

" Show line numbers
set nu

" Searching
set smartcase
set incsearch

" File
set noswapfile
set nobackup
set undodir=~/.vim/undodir
set undofile

